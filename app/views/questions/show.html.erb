<div class="jumbotron">
  <div class="container">
    <h1> <%= @question.title %> </h1>
    <h4> <%= @question.body %>  </h4>
  </div>
</div>

<% if @question.answers.any? %>
    <% @question.answers.each do |answer|%>
        <div class="well">
        <h4>Answer: <%= answer.body %></h4>
          <br>
        <p>Upvotes: <%= answer.net_vote %></p>
        </div>
    <% end %>
<% end %>
