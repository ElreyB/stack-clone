<h1>Questions</h1>

<% if current_user %>
  <%= current_user.sign_in_count %>
<% end %>

<% if @questions.any? %>
  <ul>
    <%@questions.each do |question| %>
      <li>
        <%= link_to question.title, question_path(question) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Currently no Questions have been ask.</p>
<% end %>
